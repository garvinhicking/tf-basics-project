export RUNTESTS_COMMAND_BUILD_CSS="${RUNTESTS_COMMAND_BUILD_CSS:=echo 'none'}"
export RUNTESTS_COMMAND_BUILD_JS="${RUNTESTS_COMMAND_BUILD_JS:=echo 'none'}"
export RUNTESTS_COMMAND_BUILD_CLEAN="${RUNTESTS_COMMAND_BUILD_CLEAN:=echo 'none'}"
